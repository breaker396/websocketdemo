
<input id="sURL" />
<button onclick="btnplayclick()">Play</button>
<script src="https://bilibili.github.io/flv.js/dist/flv.js"></script>
<video id="videoElement" autoplay="autoplay" muted="muted"></video>
<script>
    
    function btnplayclick() {
        if (flvjs.isSupported()) {
            var videoElement = document.getElementById('videoElement');
            var flvPlayer = flvjs.createPlayer({
                type: 'flv',
                url: document.getElementById('sURL').value //'http://localhost:5192/live/demo.flv'
            });
            flvPlayer.attachMediaElement(videoElement);
            flvPlayer.load();
            flvPlayer.play();
        }
    }
</script>
